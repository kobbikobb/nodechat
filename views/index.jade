fieldset
	legend
		h1 Spjallið
	br
	form.form-inline(data-bind="submit: sendMessage")
		input(data-bind="value: newMessage.text, valueUpdate: 'afterkeydown'", placeholder="Skilaboð")
		= " "
		button.btn.btn-primary(type="submit", data-bind="enable: newMessage.isValid") Senda skilaboð
	div(id="leftnav")
		legend
			h3 Skilaboð
		div(id="messages", data-bind="foreach: messages")
			.alert.alert-info
				strong(data-bind="text: username")
				strong.time(data-bind="text: time")
				p(data-bind="text: text")		
	div(id="rightnav")
		div(style="margin-left:12px")
			legend 
				h3 Tengdir
			div(data-bind="foreach: users")
				.alert
					strong(data-bind="text: username")
	
script(type="text/javascript")
	function scrollToBottom(){
		var objMessages = document.getElementById("messages");
		objMessages.scrollTop = objMessages.scrollHeight;
	}
	
	var chatViewModel = new ChatViewModel("#{user}");
	ko.applyBindings(chatViewModel);
	chatViewModel.messages.subscribe(scrollToBottom);
	